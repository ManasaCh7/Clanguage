#include<stdio.h>
void main()
{
    int a,b,c;
    printf("enter 3 nummbers:\n");
    scanf("%d%d%d",&a,&b,&c);
    if(a>b && a>c)
    {
        if(b>c)
          printf("%d is second largest num",b);
        else
          printf("%d is the second largest num",c);
    }
    else if (b>a && b>c)
    {
        if(a>c)
          printf("%d is the second largest num",a);
        else
          printf("%d is the second largest num",c);
    }
    else
    {
        if(a>b)
          printf("%d the second largest num is ",a);
        else
          printf("%d the second largest num is ",b);
        
    }
}
